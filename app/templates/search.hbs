<section class="search">
    <br />
    <div class="container" style="min-height: 200px;">
        <div class="row">
            <div class="col-md-12">
                <ol class="breadcrumb">
                    <li><a href="/"><i class="fa fa-home"></i></a></li>
                    <li class="active">Search</li>
                </ol>
            </div>
        </div>
        <form method="post" name="searchFrm" id="searchFrm">
            <div class="row">
                <div class="col-md-9 col-sm-8 col-xs-6">
                    <div class="form-group">
                        <input class="form-control" type="search" name="search" value="{{search}}" placeholder="Search for ...">
                        <span class="help-block">Search for Keywords, Exact words or Word matches.</span>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-6">
                    <div class="form-group">
                        <button class="button-blue" type="button" onclick="return window.Cubic.search.searchSBA();"><i class="fa fa-search"></i> Search </button>
                        <input type="button" class="button-greenc" value="Options" onclick="window.Cubic.search.showOptions();" />
                    </div>
                </div>
            </div>
            <div id="searchOptions" style="display: none;">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 col-md-3">
                        <div class="form-group">
                            <label>Search Type</label>
                            <select name="strSearchType" id="strSearchType" class="form-control">
                                <option value="Keyword">Keyword</option>
                                <option value="Category">Category</option>
                                <option value="CustWhere">Custom Where</option>
                                <option value="Buscode">Business Code</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3">
                        <div class="form-group">
                            <label>Match</label>
                            <select name="strAllAnyExact" id="strAllAnyExact" class="form-control">
                                <option value="Any">Any word</option>
                                <option value="All">All words</option>
                                <option value="Exact">Exact word</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3">
                        <div class="form-group">
                            <label>Division</label>
                            <input type="text" class="form-control" name="strDivision" id="strDivision">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3">
                        <div class="form-group">
                            <label>Category</label>
                            <input type="text" class="form-control" name="strCategory" id="strCategory">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 form-inline">
                        <div class="form-group">
                            <label>Date Range</label>
                            <input type="date" name="daterange" readonly id="daterange" class="form-control">
                            <input type="hidden" name="strStartDate">
                            <input type="hidden" name="strEndDate">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <p><strong>Include in the search results:</strong></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <select class="chosen-select" multiple name="search_items" id="search_items" style="width: 100%;">
                            <option value="pages" selected>Pages</option>
                            <option value="news" selected>Blog</option>
                            <option value="faqs" selected>FAQ's</option>
                            <option value="messaging" selected>Messaging</option>
                            <option value="digital_media" selected>Digital Media</option>
                            <!-- <option value="call_to_action" selected>Call to Action</option> -->
                            <option value="people" selected>Our Team</option>
                            <!--<option value="events" selected>Events</option>
                            <option value="online_store">Online Store</option>
                            <option value="certified_product_directory">Certified Product Directory</option>
                            <option value="member_directory" selected>Member Directory</option>-->
                        </select>
                    </div>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="progress" style="display: none;">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                </div>
            </div>
        </div>
        <div class="row site-title" style="display: none;">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <p class="lead"><strong>Site Search</strong></p>
            </div>
        </div>
        <div class="row"><div class="col-md-12 col-sm-12 col-xs-12 site-result"></div></div>
        <div class="row pages"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <div class="row news"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <div class="row faqs"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <div class="row events"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <div class="row messaging"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <div class="row digital_media"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <!-- <div class="row call_to_action"><div class="col-md-12 col-sm-12 col-xs-12"></div></div> -->
        <div class="row people"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <br />
        <div class="row members-title" style="display: none;">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <p class="lead"><strong>Members Directory Search</strong></p>
            </div>
        </div>
        <div class="row"><div class="col-md-12 col-sm-12 col-xs-12 members-result"></div></div>
        <div class="row events"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <div class="row business"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <div class="row individuals"><div class="col-md-12 col-sm-12 col-xs-12"></div></div>
        <br /><br />
    </div>
</section>
<script type="text/javascript">
    $(function(){
        var sdate = window.Cubic.moment().subtract(3, 'month').format('MM/DD/YYYY');
        var edate = window.Cubic.moment().format('MM/DD/YYYY');
        $('input[name="strStartDate"]').val(window.Cubic.moment().subtract(3, 'month').format('MM/DD/YYYY'));
        $('input[name="strEndDate"]').val(window.Cubic.moment().format('MM/DD/YYYY'));
        $("#search_items").chosen();
        $('input[name="daterange"]').daterangepicker(
            {
                format: 'MM/DD/YYYY',
                startDate: sdate,
                endDate: edate
            },
            function(start, end, label) {
                $('input[name="strStartDate"]').val(start.format('MM/DD/YYYY'));
                $('input[name="strEndDate"]').val(end.format('MM/DD/YYYY'));
            }
        );
        // automatically search when the user hits the search bar.
        if ($('input[name="search"]').val().trim().length > 0) {
            window.Cubic.search.searchSBA();
        }
        $('input[name="search"]').keypress(function(e) {
            if(e.which == 13) {
                window.Cubic.search.searchSBA();
            }
        });
    });
</script>
