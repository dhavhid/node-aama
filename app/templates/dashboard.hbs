<section class="single-sign-on">
    <div class="container margin-tb-lg">
        <h3>Single Sing On | RoundTable</h3>
        <ul>
            <li><a href="{{ssourl}}" target="_blank">Single Sign On | RoundTable</a></li>
        </ul>
    </div>
</section>

<hr />

<section class="user-section">
    <div class="container margin-tb-md">
        <h3>Profile</h3>
        <table class='user-info-table'>
            <tr>
                <td>Title</td>
                <td>{{user.strTitle}}</td>
            </tr>
            <tr>
                <td>Company</td>
                <td>{{user.strCompanyName}}</td>
            </tr>
            <tr>
                <td>Address</td>
                <td>
                    {{#if user.strAddressLine1}}{{user.strAddressLine1}}<br/>{{/if}}
                    {{#if user.strAddressLine2}}{{user.strAddressLine2}}<br/>{{/if}}
                    {{user.strCity}}, {{user.strState}} {{formatZip user.strZip}}<br/>
                </td>
            </tr>
            <tr>
                <td>Email</td>
                <td>{{user.strEmail}}</td>
            </tr>
            {{#if user.strPhone}}
                <tr>
                    <td>Phone</td>
                    <td>{{formatPhone user.strPhone}} {{user.strPhoneExt}}</td>
                </tr>
            {{/if}}
            {{#if user.strFax}}
                <tr>
                    <td>Fax</td>
                    <td>{{formatPhone user.strFax}}</td>
                </tr>
            {{/if}}
        </table>
        
        <a href='/session/user/edit' class='button-blue'>Edit Information</a>
        {{#if allowEditBusiness}}
            <a href="/session/business/edit" class="button-blue">Edit Business Information</a>
        {{/if}} 
    </div>
</section>
