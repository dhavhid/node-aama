<section class="welcome">
	<div class="container margin-t-lg">
        <form action='/session/logout/' method='POST'>
            <input class='user-logout btn' type='submit' value ='Logout' />
        </form>
		<h2>Welcome, {{user.strFirstName}} {{user.strLastName}}</h2>
	</div>
</section>

<section class="notifications">
	<div class="container margin-b-lg">
		<h3>Notifications</h3>
		<ul>
			<li>Upcoming Conference Call <em>May 25, 2016</em></li>
		</ul>
	</div>
</section>

{{#if totalRequired}}
    <section class="required-ballots">
        <div class="container margin-tb-lg">
            <h3>Survey Required Ballots</h3>
            <ul>
                {{#each requiredBallots}}
                    {{#compare Survey_Link "!=" ""}}
                        <li><a href="{{Survey_Link}}" target="_blank" title="{{name}}">{{name}}</a> </li>
                        <p><strong>Due Date:</strong> {{duedate}}</p>
                    {{/compare}}
                {{/each}}
            </ul>
        </div>
    </section>
{{/if}}

{{#if totalAvailable}}
    <section class="available-ballots">
        <div class="container margin-tb-lg">
            <h3>Survey Available Ballots</h3>
            <ul>
                {{#each availableBallots}}
                    {{#compare Survey_Link "!=" ""}}
                        <li><a href="{{Survey_Link}}" target="_blank" title="{{name}}">{{name}}</a> </li>
                        <p><strong>Due Date:</strong> {{duedate}}</p>
                    {{/compare}}
                {{/each}}
            </ul>
        </div>
    </section>
{{/if}}

{{#if totalProductRequired}}
    <section class="product-comment-ballots">
        <div class="container margin-tb-lg">
            <h3>Product Group Required Ballots</h3>
            <ul>
                {{#each productRequired}}
                    {{#compare Survey_Link "!=" ""}}
                        <li><a href="{{Survey_Link}}" target="_blank" title="{{name}}">{{name}}</a> </li>
                        <p><strong>Due Date:</strong> {{duedate}}</p>
                    {{/compare}}
                {{/each}}
            </ul>
        </div>
    </section>
{{/if}}

{{#if totalProductComment}}
    <section class="product-comment-ballots">
        <div class="container margin-tb-lg">
            <h3>Product Group Comment Ballots</h3>
            <ul>
                {{#each productComment}}
                    {{#compare Survey_Link "!=" ""}}
                        <li><a href="{{Survey_Link}}" target="_blank" title="{{name}}">{{name}}</a> </li>
                        <p><strong>Due Date:</strong> {{duedate}}</p>
                    {{/compare}}
                {{/each}}
            </ul>
        </div>
