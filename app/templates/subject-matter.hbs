<!-- Recent News -->
<section class="recent-news">
	<div class="container margin-tb-xl">
		<div class="row">
			<h2 style="padding: 0px 15px;">
				<a href="/{{#if audienceSlug}}{{audienceSlug}}/{{/if}}{{slugify subject}}/blog">{{subject}} News</a>
			</h2>
			{{#each news}}
				<div class="col-md-4">
					<div class="blog-post">
						<span class="post-date">{{dateFormat publishDate "mmmm d, yyyy"}}</span>
						<a href="/blog/{{id}}"><h4>{{title}}</h4></a>
						{{#if images.featuredImage}}
							<img src="{{images.featuredImage.data.thumb}}" alt="Thumbnail" class="post-thumb img-responsive">
						{{/if}}
						<p>{{excerpt content 55}}</p>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</section>
<!-- End of Recent News -->


