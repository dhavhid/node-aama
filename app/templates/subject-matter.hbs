<!-- Subject Matter Content -->
{{#with subject_content}}
	<section class="subject-matter-content">
		<div class="container margin-tb-lg">
			<div class="post">
				<h2 class="post-title">{{title}}</h2>
				<h3 class="post-subtitle">{{byline}}</h3>

				<div class="post-content clearfix">
					{{#if images.featuredImage}}
						<div class="post-thumb">
							<img class="post-img" src="{{images.featuredImage.data.thumb}}" alt="Post Image">
						</div>
					{{/if}}

					{{{content}}}

				</div> <!-- End post content -->

			</div> <!-- End post -->
		</div>
	</section>
{{/with}}


